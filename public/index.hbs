<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <base href="frontend/">
    <title>Caramail</title>
    <link rel="stylesheet" type="text/css" href="./style.css" />
  </head>
  <body>
    <div class="header">
      <div class="element">
        The HTML is served by
        <span class="name">{{htmlserver}}</span>
        <br>
        The WebSocket server is
        <span class="name" id="websocketserver"></span>
      </div>
    </div>
    <form class="invisible" action="">
      <input type="hidden" id="websocket_host" value={{websocketHost}}></input>
      <input type="hidden" id="websocket_path" value={{websocketPath}}></input>
    </form>

    <ul class="pages">
      <li class="chat page">
        <div class="chatArea">
          <ul class="messages"></ul>
        </div>
        <input class="inputMessage" placeholder="Type here..."/>
      </li>
      <li class="login page">
        <div class="form">
          <h3 class="title">What's your username?</h3>
          <input class="usernameInput" type="text" maxlength="14" />
        </div>
      </li>
    </ul>

    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="./main.js"></script>
  </body>
</html>
